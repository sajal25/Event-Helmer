<p id="notice"><%= notice %></p>

<h1>Event Topics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_topics.each do |event_topic| %>
      <tr>
        <td><%= event_topic.name %></td>
        <td><%= event_topic.description %></td>
        <td><%= link_to 'Show', event_topic %></td>
        <td><%= link_to 'Edit', edit_event_topic_path(event_topic) %></td>
        <td><%= link_to 'Destroy', event_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

