<div class="container">
  <div style="margin-top:10%"></div>
  <div class="row">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Event</th>
            <th>Starts at</th>
            <th>Ends at</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.start_datetime %></td>
              <td><%= event.end_datetime %></td>
              <td>
                <%= link_to "View", organizer_event_path(event), class: "btn btn-primary" %>
                <%= link_to "Edit", edit_organizer_event_path(event), class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>